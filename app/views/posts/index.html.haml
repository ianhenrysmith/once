#posts.gray_bg
%table#post_pane.pane_1
  %td#atomic_menu.pane_btns_1.panel_1
    %a{href: "/posts#/index"}
      %h2.block="CLOSE"  # should be something like 'window.history.back();'
    %h2.block.acktion{action: "toggle_like"}="LIKE"
    %h2.block="COMMENT"
  %td#post_pane_content.panel_1.white_bg

:javascript
  posts_json = #{ @posts.to_json.html_safe };
  users_json = #{@users.to_json.html_safe};
  
  $(function() {
    window.router = new Once.Routers.PostsRouter({posts: posts_json, users: users_json});
    Backbone.history.start();
  });