.inline_block.white_bg
  - if @type == "image"
    - img_url = @preview_url || @asset_url || @content #start w preview
    %img{ src: img_url, class: 'preview_img'}
  - else if @type == "quote"
    .preview_quote != @content
  - else if @type == "text"
    != @content
  - else if @type == "video"
    - yt_id = @content.split("watch?v=")[1]
    %iframe{ width:'270', height:'152', src:"http://www.youtube.com/embed/#{yt_id}", frameborder:'0', allowfullscreen:'true'
  - else if @type == "tweet"
    = "Tweet"
  - else if @type == "link"
    - img_url = @preview_url || @asset_url
    - if img_url
      %img{ src: img_url, class: 'preview_img'}
    - else
      - if @content && @content.length > 60
        = @content.substring(0,60) + "..."
      - else
        = @content
  - else
    - if @content && @content.length > 60
      = @content.substring(0,60) + "..."
    - else
      = @content